@page "/"
@using Realisation
@using VisualisationSite.Models
@using VisualisationSite.Services
@inject TraceService TraceService

<div class="visualization-container">
    <div class="visualization-header">
        <h1>Observability Visualization</h1>
    </div>

    <div class="visualization-content">
        <div class="visualization-sidebar">
            <TraceTree />
        </div>
        <div class="visualization-main">
            <Timeline />
            <HttpRequestDetails />
        </div>
    </div>
</div>

<style>
    .visualization-container {
        height: 100vh;
        display: flex;
        flex-direction: column;
        padding: 1rem;
    }

    .visualization-header {
        margin-bottom: 1rem;
    }

    .visualization-content {
        flex: 1;
        display: flex;
        gap: 1rem;
        min-height: 0;
    }

    .visualization-sidebar {
        width: 400px;
        min-width: 400px;
    }

    .visualization-main {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        min-height: 0;
    }
</style> 